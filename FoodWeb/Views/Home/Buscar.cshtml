
@model List<FoodWeb.Models.Producto>

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">
                    <h2>Categorias</h2>
                    <div class="panel-group category-products" id="accordian">
                        <!--category-productsr-->
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordian" href="#sportswear">
                                        <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                                        JUGOS
                                    </a>
                                </h4>
                            </div>
                            <div id="sportswear" class="panel-collapse collapse">
                                <div class="panel-body">
                                    <ul>
                                        <li><a href="">Frutas </a></li>
                                        <li><a href="">Estractos </a></li>
                                        <li><a href="">Especiales </a></li>                                        
                                    </ul>
                                </div>
                            </div>
                        </div>                        
                        
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title"><a href="#">DESAYUNOS</a></h4>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title"><a href="#">ALMUERZOS</a></h4>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title"><a href="#">CENAS</a></h4>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title"><a href="#">MERIENDAS</a></h4>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title"><a href="#">FRUTAS</a></h4>
                            </div>
                        </div>                        
                    </div><!--/category-productsr-->                                                         
                    
                </div>
            </div>

            
            
            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    <h2 class="title text-center">Resultados de: @ViewBag.clave</h2>

            @foreach (var item in Model)
               {

                var imagen = @item.ProductoImagen.FirstOrDefault();
                string img = imagen == null ? "no_disponible.jpg" : imagen.Imagen;

                    <div class="col-sm-4">
                        <div class="product-image-wrapper">
                            <div class="single-products">
                                <div class="productinfo text-center">
                                    <img src="~/images/ImgProductos/@img" alt="" />
                                    <h2>S/. @item.Precio</h2>
                                    <p>@item.Denominacion</p>
                                    <a onclick="AgregarCarrito(@item.ProductoId,'@item.Denominacion','@img',@item.Precio)" href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Agregar al Carrito</a>
                                </div>                                
                            </div>
                            <div class="choose">
                                <ul class="nav nav-pills nav-justified">
                                    <li><a href="@Url.Action("Index","Detalle")"><i class="fa fa-plus-square"></i>Vista Previa</a></li>                                    
                                </ul>
                            </div>
                        </div>
                    </div>
            }

                    @*<ul class="pagination">
                        <li class="active"><a href="">1</a></li>
                        <li><a href="">2</a></li>
                        <li><a href="">3</a></li>
                        <li><a href="">&raquo;</a></li>
                    </ul>*@
                </div><!--features_items-->
            </div>
            
        </div>
    </div>
</section>